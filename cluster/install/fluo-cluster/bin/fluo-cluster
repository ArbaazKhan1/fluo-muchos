SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
   bin="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
   SOURCE="$(readlink "$SOURCE")"
   [[ $SOURCE != /* ]] && SOURCE="$bin/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
bin="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

. "$bin"/../conf/env.sh

# Exit if any command fails
set -e

case "$1" in 
setup-os)
  "$bin"/impl/setup-os.sh "${@:2}"
  ;;
configure)
  "$bin"/impl/configure.sh "${@:2}"
  ;;
install)
  "$bin"/impl/install.sh "${@:2}"
  ;;
setup-sw)
  "$bin"/impl/setup-sw.sh "${@:2}"
  ;;
start)
  "$bin"/impl/start.sh "${@:2}"
  ;;
kill)
  "$bin"/impl/kill.sh "${@:2}"
  ;;
ready)
  "$bin"/impl/ready.sh "${@:2}"
  ;;
ashell)
  $ACCUMULO_HOME/bin/accumulo shell -u root -p $ACCUMULO_PASSWORD "${@:2}"
  ;;
run)
  "$bin"/impl/run.sh "${@:2}"
  ;;
*)
  echo -e "Usage: fluo-cluster command (<argument>)\n"
  echo -e  "Commands that run on entire cluster:\n"
  echo "  setup-os     Sets up OS of each machine in cluster"
  echo "  setup-sw     Sets up cluster software"
  echo "  start        Start all services on cluster"
  echo "  kill         Kill cluster processes"
  echo "  ready        Checks if cluster is running and ready"
  echo "  ashell       Runs Accumulo shell"
  echo "  run <app>    Runs Fluo application specified by <app>"
  echo -e "\nLocal commands that run on a single node:\n"
  echo "  configure    Configure Linux on this node"
  echo "  install      Install services on this node"
  echo " " 
  exit 1
esac
