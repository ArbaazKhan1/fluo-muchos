export ZETTEN_BIN="$(dirname $0)"

ZETTEN="$( cd -P ${ZETTEN_BIN}/.. && pwd )"
export ZETTEN
if [ -z "$ZETTEN" -o ! -d "$ZETTEN" ]
then
  echo "ZETTEN=$ZETTEN is not a valid directory.  Please make sure it exists"
  exit 1
fi

if [ ! -f $ZETTEN/conf/zetten.props ]; then
  echo "Please create a configuration file at $ZETTEN/conf/zetten.props"
  exit 1
fi

python -Wdefault "$ZETTEN/bin/impl/zetten/main.py" "$@"
